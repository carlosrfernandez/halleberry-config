version: '3'
networks:
  home:
volumes:
    pihole-data:
    pihole-dnsmasq-data:
    unifi-data:
services:
  unifi:
    image: ghcr.io/linuxserver/unifi-controller
    container_name: unifi
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Europe/Madrid
      - VIRTUAL_HOST=unifi.local
      - VIRTUAL_PORT=8443
      - VIRTUAL_PROTO=https
      - VIRTUAL_NETWORK=home
      - MEM_LIMIT=2048M #optional
      - MEM_STARTUP=1024M #optional
    volumes:
      - 'unifi-data:/config'
    expose:
      - "8443"
      - "8080WARN Unable to load properties from '/usr/lib/unifi/data/system.properties' - /usr/lib/unifi/data/system.properties (No such file or directory"
    ports:
      - 3478:3478/udp
      - 10001:10001/udp
      - 8080:8080
      - 8443:8443
      - 1900:1900/udp #optional
      - 8843:8843 #optional
      - 8880:8880 #optional
      - 6789:6789 #optional
      - 5514:5514/udp #optional
    restart: unless-stopped
    networks: 
      - home
  pihole:
    container_name: pihole
    image: pihole/pihole:v5.8.1-stretch
    expose:
      - "80"
      - "443"
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "67:67/udp"
      - "80:80/tcp"
      - "443:443/tcp"
    environment:
      - TZ=Europe/Madrid
      - WEBPASSWORD=blahblah
      - VIRTUAL_HOST=pihole.local
      - ServerIP=192.168.1.100
    # Volumes store your data between container upgrades
    volumes:
      - 'pihole-data:/etc/pihole/'
      - 'pihole-dnsmasq-data:/etc/dnsmasq.d/'
    # Recommended but not required (DHCP needs NET_ADMIN)
    #   https://github.com/pi-hole/docker-pi-hole#note-on-capabilities
    cap_add:
      - NET_ADMIN
    restart: unless-stopped
    networks:
      - home
